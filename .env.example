# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/bulkwala

# Frontend URLs (JSON array format)
FRONTEND_URL=["http://localhost:5173"]

# JWT Secrets
ACCESS_TOKEN_SECRET=your-access-token-secret-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
VERIFICATION_TOKEN_EXPIRES_IN=24h

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_SECRET=your_razorpay_secret_key

# ImageKit (Image CDN)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# Delhivery Shipping Service
DELHIVERY_API_URL=https://track.delhivery.com/api
DELHIVERY_API_TOKEN=your_delhivery_api_token
DELHIVERY_PICKUP_NAME=your_pickup_location_name
